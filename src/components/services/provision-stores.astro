---
const provisions = [
    {
        title: "Fresh Products",
        description:
            "Premium quality fresh vegetables, fruits, and herbs sourced globally",
        image: "/services/provision-stores/1.jpg",
        items: [
            "Seasonal Vegetables",
            "Exotic Fruits",
            "Fresh Herbs",
            "Organic Produce",
        ],
    },
    {
        title: "Frozen & Chilled",
        description:
            "High-grade frozen meats, seafood, and dairy products maintained at optimal temperatures",
        image: "/services/provision-stores/2.jpg",
        items: [
            "Premium Meats",
            "Fresh Seafood",
            "Dairy Products",
            "Frozen Meals",
        ],
    },
    {
        title: "Specialty Diets",
        description:
            "Catering to diverse dietary requirements with certified products",
        image: "/services/provision-stores/3.jpg",
        items: [
            "Halal Certified",
            "Vegan Options",
            "Gluten-Free",
            "Kosher Products",
        ],
    },
    {
        title: "Beverages",
        description: "Comprehensive selection of drinks for all preferences",
        image: "/services/provision-stores/4.jpg",
        items: [
            "Premium Wines",
            "Soft Drinks",
            "Fresh Juices",
            "Mineral Water",
        ],
    },
];
---

<section class="py-16 bg-gradient-to-b from-white to-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Updated Hero Section -->
        <div class="relative mb-16 pb-24">
            <div class="absolute inset-0 z-0">
                <img
                    src="/services/provision-stores.jpg"
                    alt="Marine Provisions"
                    class="w-full h-[600px] object-cover"
                />
            </div>
            <div class="relative z-10 text-center pt-40 pb-40">
                <h1 class="text-5xl font-bold text-white mb-8">
                    Marine Provisions & Equipment Services
                </h1>
                <p class="text-xl text-white max-w-3xl mx-auto leading-relaxed">
                    We adhere to rigorous food safety measures and have adopted
                    a complete food traceability platform, ensuring the highest
                    quality provisions for your marine needs.
                </p>
            </div>
        </div>

        <!-- Updated Main Content -->
        <div class="space-y-24">
            {
                provisions.map((category, index) => (
                    <div
                        class={`flex flex-col ${index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"} gap-12 items-center`}
                    >
                        <div class="w-full md:w-1/2 group">
                            <div class="relative overflow-hidden rounded-2xl shadow-xl">
                                <img
                                    src={category.image}
                                    alt={category.title}
                                    class="w-full h-[500px] object-cover transform transition-transform group-hover:scale-105"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
                            </div>
                        </div>
                        <div class="w-full md:w-1/2 space-y-8">
                            <h3 class="text-4xl font-bold text-black">
                                {category.title}
                            </h3>
                            <p class="text-xl text-black/60 leading-relaxed">
                                {category.description}
                            </p>
                            <div class="grid grid-cols-2 gap-6">
                                {category.items.map((item) => (
                                    <div class="flex items-center space-x-3 text-black bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow">
                                        <span class="text-[#344CB7] text-2xl">
                                            â€¢
                                        </span>
                                        <span class="text-lg">{item}</span>
                                    </div>
                                ))}
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Updated Quality Assurance Section -->
        <div class="mt-24 bg-white rounded-3xl p-16 shadow-xl">
            <h2
                class="text-4xl font-bold text-center mb-16 bg-clip-text text-transparent bg-gradient-to-r from-[#344CB7] to-[#344CB7]"
            >
                Our Quality Assurance
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                {
                    ["Food Safety", "Fast Delivery", "Temperature Control"].map(
                        (title) => (
                            <div class="bg-gradient-to-br from-white to-gray-50 p-8 rounded-2xl hover:transform hover:-translate-y-2 transition-all duration-300">
                                <div class="w-16 h-16 bg-[#344CB7] rounded-2xl flex items-center justify-center mb-6 transform -rotate-6">
                                    <svg
                                        class="w-8 h-8 text-white"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        />
                                    </svg>
                                </div>
                                <h3 class="text-2xl font-bold mb-4 text-black">
                                    {title}
                                </h3>
                                <p class="text-lg text-black/60">
                                    Rigorous safety protocols and regular
                                    quality checks
                                </p>
                            </div>
                        ),
                    )
                }
            </div>
        </div>

        <!-- Added CTA Section -->
        <div class="mt-24 text-center">
            <a
                href="/contact"
                class="inline-block px-8 py-4 text-xl font-semibold text-white bg-[#344CB7] rounded-full hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300"
            >
                Request a Quote Today
            </a>
        </div>
    </div>
</section>
