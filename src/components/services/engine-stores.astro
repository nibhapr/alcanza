<section class="bg-gradient-to-b from-gray-50 to-white py-24">
    <div class="container mx-auto px-4">
        <!-- Enhanced Hero Section with parallax effect -->
        <div
            class="relative h-[70vh] min-h-[600px] mb-24 rounded-3xl overflow-hidden"
        >
            <img
                src="/services/engine-stores/1.jpg"
                alt="Engine Store Services"
                class="w-full h-full object-cover transform scale-105 motion-safe:animate-subtle-zoom"
            />
            <div
                class="absolute inset-0 bg-gradient-to-r from-black/30 via-black/20 to-transparent"
            >
            </div>
            <div class="absolute inset-0 flex items-center justify-center">
                <div
                    class="text-center max-w-5xl mx-auto px-4 motion-safe:animate-fade-in"
                >
                    <span
                        class="bg-white font-semibold text-lg tracking-wider uppercase mb-8 block py-2 px-6 rounded-full inline-block"
                    >
                        Marine Excellence
                    </span>
                    <h1
                        class="text-6xl md:text-8xl font-bold text-white mb-8 leading-tight drop-shadow-lg"
                    >
                        Your Complete <span class="text-[#344CB7]"
                            >Engine Store</span
                        > Solution
                    </h1>
                    <p
                        class="text-2xl text-white leading-relaxed max-w-3xl mx-auto font-light drop-shadow-lg"
                    >
                        Comprehensive range of certified marine engine store
                        products following
                        <span class="font-medium">ISSA</span> and <span
                            class="font-medium">IMPA</span
                        > catalogues standards.
                    </p>
                </div>
            </div>
        </div>

        <!-- Enhanced Categories Grid with better animations -->
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10"
        >
            {
                engineStoreCategories.map((category, index) => (
                    <div
                        class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl overflow-hidden transition-all duration-500 transform hover:-translate-y-2"
                        style={`animation: fadeInUp 0.5s ease-out ${index * 0.1}s both`}
                    >
                        <div class="relative h-64">
                            <img
                                src={category.image}
                                alt={category.title}
                                class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent flex flex-col items-center justify-center p-8 group-hover:from-black/90 transition-all duration-500">
                                <span class="text-5xl mb-4 transform group-hover:scale-110 transition-transform duration-500">
                                    {category.icon}
                                </span>
                                <h3 class="text-white text-2xl font-bold text-center mb-2">
                                    {category.title}
                                </h3>
                                <p class="text-white/90 text-sm text-center transform group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-500">
                                    {category.description}
                                </p>
                            </div>
                        </div>
                        <div class="p-8">
                            <ul class="space-y-4">
                                {category.items.map((item) => (
                                    <li class="flex items-center text-black group/item hover:text-[#344CB7] transition-all duration-300">
                                        <svg
                                            class="w-5 h-5 mr-3 text-[#344CB7] transform group-hover/item:scale-110 transition-transform"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                            />
                                        </svg>
                                        <span class="group-hover/item:translate-x-2 transition-transform duration-300">
                                            {item}
                                        </span>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))
            }
        </div>

        <!-- Enhanced Certification Banner -->
