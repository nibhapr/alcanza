<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes subtle-zoom {
        0% {
            transform: scale(1);
        }
        100% {
            transform: scale(1.05);
        }
    }

    .animate-subtle-zoom {
        animation: subtle-zoom 20s ease-in-out infinite alternate;
    }

    .animate-fade-in {
        animation: fadeInUp 1s ease-out forwards;
    }
</style>
