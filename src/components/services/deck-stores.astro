---

<section class="bg-gradient-to-b from-gray-50 to-white">
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-[#344CB7] text-white h-[600px]">
    <img
      src="/services/deck-stores/deck-stores.jpg" 
      alt="Deck Stores Equipment"
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container mx-auto px-4 py-32 relative z-10">
      <h1 class="text-6xl font-bold mb-8 drop-shadow-lg">Deck Stores</h1>
      <p class="text-2xl max-w-3xl leading-relaxed drop-shadow-lg">
        Your comprehensive source for IMPA and ISSA catalogue deck stores. From MEG4 compliant ropes to specialized equipment, we ensure your vessel operates with certified quality materials.
      </p>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-16">
    <!-- Categories Section -->
    {deckStoreCategories.map((category, index) => (
      <div class={`flex flex-col lg:flex-row gap-12 mb-20 ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
        <div class="lg:w-1/2">
          <div class="rounded-2xl overflow-hidden shadow-xl">
            <img
              src={category.image}
              alt={category.title}
              class="w-full h-[400px] object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
        </div>
        <div class="lg:w-1/2 space-y-6">
          <h2 class="text-3xl font-bold text-black">{category.title}</h2>
          <p class="text-lg text-black">{category.description}</p>
          
          <div class="space-y-4">
            <h3 class="text-xl font-semibold text-black">Key Features:</h3>
            <ul class="grid grid-cols-1 md:grid-cols-2 gap-3">
              {category.features.map((feature) => (
                <li class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-[#344CB7]" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
                  </svg>
                  <span class="text-black">{feature}</span>
                </li>
              ))}
            </ul>
          </div>

          <div class="flex flex-wrap gap-3">
            {category.certifications.map((cert) => (
              <span class="px-4 py-2 bg-[#344CB7] text-white rounded-full text-sm font-medium">
                {cert}
              </span>
            ))}
          </div>
        </div>
      </div>
    ))}

    <!-- Additional Services -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
      {additionalServices.map((service) => (
        <div class="text-center p-6 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow">
          <div class="w-16 h-16 mx-auto mb-4 bg-[#344CB7] rounded-full flex items-center justify-center text-white">
            <Fragment set:html={service.icon} />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-black">{service.title}</h3>
          <p class="text-black">{service.description}</p>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="mt-20 text-center bg-white rounded-2xl p-12">
      <h2 class="text-3xl font-bold mb-6 text-black">Ready to Order?</h2>
      <p class="text-lg text-black mb-8 max-w-2xl mx-auto">
        Contact our specialized team for detailed product information, certifications, and competitive quotes.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/contact" class="px-8 py-3 bg-[#344CB7] text-white rounded-lg hover:bg-[#344CB7]/90 transition-colors">
          Contact Us
        </a>
        <a href="/catalog" class="px-8 py-3 border border-[#344CB7] text-[#344CB7] rounded-lg hover:bg-[#344CB7]/10 transition-colors">
          View Catalog
        </a>
      </div>
    </div>
  </div>
</section>
