---
const marineEquipments = [
    {
        title: "Pneumatic Equipment",
        description:
            "Industrial-grade pneumatic tools and equipment for marine applications",
        image: "/services/marine-equipments/2.jpg",
        features: [
            "Air Compressors",
            "Pneumatic Wrenches",
            "Air Motors",
            "Pressure Regulators",
            "Air Treatment Units",
        ],
        certification: "ISO 9001:2015",
    },
    {
        title: "Cutting Tools",
        description:
            "Precision cutting tools for efficient marine maintenance and repair",
        image: "/services/marine-equipments/3.jpg",
        features: [
            "Industrial Cutting Machines",
            "Plasma Cutters",
            "Grinding Equipment",
            "Metal Shears",
            "Pipe Cutters",
        ],
        certification: "CE Certified",
    },
    {
        title: "Non-Sparking Tools",
        description:
            "Safety-certified non-sparking tools for hazardous environments",
        image: "/services/marine-equipments/4.jpg",
        features: [
            "Bronze Hammers",
            "Aluminum Bronze Wrenches",
            "Beryllium Copper Tools",
            "Safety Screwdrivers",
            "ATEX Certified Equipment",
        ],
        certification: "ATEX Certified",
    },
    {
        title: "Measuring Instruments",
        description: "High-precision measuring and testing equipment",
        image: "/services/marine-equipments/5.jpg",
        features: [
            "Digital Calipers",
            "Micrometers",
            "Thickness Gauges",
            "Laser Measurement Tools",
            "Testing Equipment",
        ],
        certification: "ISO/IEC 17025",
    },
];

const additionalServices = [
    {
        icon: "üõ†Ô∏è",
        title: "Equipment Rental",
        description:
            "Short and long-term rental options for specialized marine equipment",
    },
    {
        icon: "üîß",
        title: "Maintenance Services",
        description: "Professional maintenance and calibration services",
    },
    {
        icon: "üì¶",
        title: "Custom Solutions",
        description:
            "Tailored equipment solutions for specific marine applications",
    },
];

const certifications = [
    "DNV-GL Certified",
    "ABS Approved",
    "Lloyd's Register Certified",
    "RINA Certified",
];
---

<main class="bg-gradient-to-b from-gray-50 to-white min-h-screen">
    <!-- Hero Section -->
    <section class="relative h-[80vh] overflow-hidden">
        <div class="absolute inset-0">
            <img
                src="/services/marine-equipments/1.jpg"
                alt="Marine Equipment"
                class="w-full h-full object-cover filter brightness-75 transform scale-105 transition-transform duration-1000 hover:scale-100"
            />
            <div
                class="absolute inset-0 bg-gradient-to-r from-black/50 to-transparent"
            >
            </div>
        </div>
        <div class="relative container mx-auto px-4 h-full flex items-center">
            <div class="max-w-3xl animate-fade-in">
                <h1
                    class="text-7xl font-bold text-white mb-8 leading-tight drop-shadow-lg"
                >
                    Marine Equipment Solutions
                </h1>
                <p
                    class="text-2xl text-white leading-relaxed max-w-2xl drop-shadow-md"
                >
                    Professional-grade marine equipment and tools, certified to
                    international standards and designed for maritime
                    excellence.
                </p>
            </div>
        </div>
    </section>

    <!-- Equipment Categories -->
    <section class="py-32 relative">
        <div
            class="absolute inset-0 bg-gradient-to-b from-transparent via-blue-50/40 to-transparent"
        >
        </div>
        <div class="container mx-auto px-4 relative">
            <h2
                class="text-4xl md:text-5xl font-bold text-center mb-16 bg-gradient-to-r from-[#344CB7] to-black bg-clip-text text-transparent"
            >
                Our Marine Equipment
            </h2>
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-10"
            >
                {
                    marineEquipments.map((equipment) => (
                        <div class="group bg-white rounded-xl shadow-lg hover:shadow-2xl transform hover:-translate-y-2 transition-all duration-500 border border-gray-100/50 hover:border-blue-100">
                            <div class="aspect-video relative overflow-hidden rounded-t-xl">
                                <img
                                    src={equipment.image}
                                    alt={equipment.title}
                                    class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700 ease-in-out"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                                <span class="absolute top-4 right-4 px-4 py-1.5 bg-[#344CB7] text-white text-sm font-medium rounded-full shadow-lg backdrop-blur-sm bg-opacity-90 border border-white/10">
                                    {equipment.certification}
                                </span>
                            </div>

                            <div class="p-8">
                                <h3 class="text-2xl font-bold bg-gradient-to-r from-[#344CB7] to-gray-800 bg-clip-text text-transparent mb-4 group-hover:from-[#344CB7] group-hover:to-[#344CB7] transition-all duration-300">
                                    {equipment.title}
                                </h3>
                                <p class="text-gray-600 mb-6 leading-relaxed">
                                    {equipment.description}
                                </p>
                                <ul class="space-y-3">
                                    {equipment.features.map((feature) => (
                                        <li class="flex items-center text-gray-700 hover:text-[#344CB7] transition-colors duration-300">
                                            <span class="mr-3 text-[#344CB7] transform group-hover:scale-110 transition-transform duration-300">
                                                ‚ö°
                                            </span>
                                            <span class="font-medium">
                                                {feature}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Additional Services -->
    <section class="py-24 relative overflow-hidden">
        <div
            class="absolute inset-0 bg-gradient-to-r from-blue-50/20 to-transparent"
        >
        </div>
        <div class="container mx-auto px-4 relative">
            <h2
                class="text-5xl font-bold text-center mb-20 bg-gradient-to-r from-[#344CB7] to-black bg-clip-text text-transparent drop-shadow-sm"
            >
                Additional Services
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
                {
                    additionalServices.map((service) => (
                        <div class="group relative bg-white rounded-2xl p-10 shadow-xl hover:shadow-2xl transition-all duration-300 border border-gray-100">
                            <div class="absolute -top-10 left-1/2 -translate-x-1/2 w-20 h-20 bg-white border-2 border-[#344CB7] rounded-2xl flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300 shadow-lg">
                                <span class="text-4xl bg-gradient-to-r from-[#344CB7] to-black bg-clip-text text-transparent group-hover:scale-110 transition-transform duration-300">
                                    {service.icon}
                                </span>
                            </div>
                            <h3 class="text-2xl font-bold mb-5 mt-8 text-center bg-gradient-to-r from-[#344CB7] to-black bg-clip-text text-transparent">
                                {service.title}
                            </h3>
                            <p class="text-center text-lg text-gray-600">
                                {service.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Certifications -->
    <section class="py-20 relative">
        <div class="container mx-auto px-4 text-center">
            <h2
                class="text-4xl font-bold mb-12 bg-gradient-to-r from-[#344CB7] to-black bg-clip-text text-transparent"
            >
                Our Certifications
            </h2>
            <div class="flex flex-wrap justify-center gap-6">
                {
                    certifications.map((cert) => (
                        <span class="px-8 py-4 border-2 border-[#344CB7] bg-white bg-gradient-to-r from-[#344CB7] to-black bg-clip-text text-transparent rounded-full font-medium hover:border-black transition-all duration-300 hover:shadow-lg transform hover:-translate-y-1">
                            {cert}
                        </span>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 relative">
        <div
            class="absolute inset-0 bg-gradient-to-b from-blue-50/30 to-transparent"
        >
        </div>
        <div class="container mx-auto px-4 text-center relative">
            <h2
                class="text-5xl font-bold mb-10 bg-gradient-to-r from-[#344CB7] to-black bg-clip-text text-transparent"
            >
                Ready to Equip Your Vessel?
            </h2>
            <p class="text-2xl mb-14 max-w-3xl mx-auto text-gray-600">
                Contact our team for expert guidance on selecting the right
                equipment for your maritime needs.
            </p>
            <div class="flex justify-center gap-8">
                <a
                    href="/contact"
                    class="px-12 py-6 border-2 border-[#344CB7] bg-white hover:bg-[#344CB7] bg-gradient-to-r from-[#344CB7] to-black bg-clip-text text-transparent hover:text-white rounded-xl font-bold text-lg transition-all duration-300 hover:shadow-xl transform hover:-translate-y-1"
                >
                    Contact Us
                </a>
            </div>
        </div>
    </section>
</main>
