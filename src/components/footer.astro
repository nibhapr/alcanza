---
const currentYear = new Date().getFullYear();

const services = [
    { name: "Engine Stores", href: "/services/engine-stores" },
    { name: "Deck Stores", href: "/services/deck-stores" },
    { name: "Provision Stores", href: "/services/provision-stores" },
    { name: "Marine Equipments", href: "/services/marine-equipments" },
    { name: "Cabin Stores", href: "/services/cabin-stores" },
];

const company = [
    { name: "Terms of service", href: "/terms" },
    { name: "Privacy policy", href: "/privacy" },
    { name: "Cookie policy", href: "/cookie" },
];

const locations = [
    {
        name: "Dubai",
        address:
            "Alcanza Ship Services, Mai Tower, Office 401-405, Al Nahda 1, Dubai, UAE",
        mapLink:
            "https://maps.google.com/?q=Alcanza+Ship+Services,+Mai+Tower,+Office+401-405,+Al+Nahda+1,+Dubai,+UAE",
        phone: "+971 (54)7131722",
        email: "operations@alcanzaship.com",
        email2: "sales@alcanzaship.com",
    },
];

const social = [
    {
        name: "Facebook",
        href: "https://www.facebook.com/",
        icon: "facebook",
        hoverColor: "hover:text-[#1877F2]",
        hoverBg: "group-hover:bg-[#1877F2]/10",
    },
    {
        name: "Instagram",
        href: "https://www.instagram.com/",
        icon: "instagram",
        hoverColor: "hover:text-[#E4405F]",
    },
    {
        name: "LinkedIn",
        href: "https://www.linkedin.com/company/",
        icon: "linkedin",
        hoverColor: "hover:text-[#0A66C2]",
    },
    {
        name: "X",
        href: "https://x.com/",
        icon: "x",
        hoverColor: "hover:text-[#1DA1F2]",
    },
];
---

<footer
    class="bg-gradient-to-br from-blue-900 to-blue-950 relative border-t-4 border-blue-600"
>
    <!-- Improved stable background pattern -->
    <div class="absolute inset-0 opacity-5">
        <div
            class="absolute inset-0 bg-repeat bg-[length:50px_50px] bg-[url('/grid-pattern.svg')]"
        >
        </div>
    </div>

    <!-- Simplified, more stable wave animation -->
    <div class="w-full relative overflow-hidden">
        <svg
            class="w-full h-20 text-blue-900"
            viewBox="0 0 1440 54"
            fill="white"
            preserveAspectRatio="none"
        >
            <path
                d="M0,0 C480,54 960,54 1440,0 L1440,54 L0,54 Z"
                class="motion-safe:animate-gentle-wave"></path>
        </svg>
    </div>

    <!-- Main content container with improved glass effect -->
    <div
        class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-12 relative z-10"
    >
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Company Info - Enhanced card -->
            <div class="glass-card p-4 rounded-2xl space-y-4">
                <img
                    src="/home/logo-white.png"
                    alt="MarineShip Logo"
                    class="h-28 hover:opacity-90 transition-all duration-300 transform hover:scale-105"
                />
                <p
                    class="text-blue-100 text-sm leading-relaxed border-l-4 border-blue-600 pl-4"
                >
                    Alcanza Ship Services has 30 years of experience in ship
                    supply and spare parts. We provide new-built stores to
                    shipyards and technical stores to ports and the offshore oil
                    & gas sector. Recently, we expanded to supply cruise liners,
                    prioritizing the health and safety of seafarers on all
                    vessels we serve.
                </p>
                <div class="flex space-x-4">
                    {
                        social.map((item) => (
                            <a
                                href={item.href}
                                class={`text-blue-200 p-3 rounded-full transition-all duration-300 group relative hover:-translate-y-1`}
                            >
                                <div
                                    class={`absolute inset-0 rounded-full scale-0 group-hover:scale-100 transition-transform duration-300 ${item.hoverBg || "group-hover:bg-blue-600/10"}`}
                                />
                                <i
                                    class={`fab fa-${item.icon} text-2xl relative z-10 ${item.hoverColor}`}
                                />
                                <span class="absolute -top-10 left-1/2 -translate-x-1/2 bg-white text-blue-900 px-2 py-1 rounded text-sm opacity-0 group-hover:opacity-100 transition-all duration-300 shadow-lg whitespace-nowrap">
                                    {item.name}
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- Services - Enhanced card -->
            <div class="glass-card p-6 rounded-2xl">
                <h3
                    class="text-white font-bold mb-6 text-lg border-b border-blue-700 pb-2"
                >
                    Our Services
                </h3>
                <ul class="space-y-4">
                    {
                        services.map((service) => (
                            <li>
                                <a
                                    href={service.href}
                                    class="text-blue-200 hover:text-white transition-all duration-300 flex items-center group relative overflow-hidden rounded-lg p-2"
                                >
                                    <div class="absolute inset-0 bg-blue-600/0 group-hover:bg-blue-600/10 transition-colors duration-300" />
                                    <svg
                                        class="w-4 h-4 mr-2 transform group-hover:translate-x-1 transition-transform relative z-10"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    <span class="relative z-10">
                                        {service.name}
                                    </span>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Global Offices - Enhanced card -->
            <div class="glass-card p-6 rounded-2xl">
                <h3
                    class="text-white font-bold mb-6 text-lg border-b border-blue-700 pb-2"
                >
                    Our Locations
                </h3>
                <div class="space-y-6">
                    {
                        locations.map((location) => (
                            <div class="text-blue-200 transition-colors duration-300">
                                <p class="font-semibold flex items-center">
                                    <svg
                                        class="w-4 h-4 mr-2"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                    {location.name}
                                </p>
                                <div class="ml-6 space-y-1">
                                    <a
                                        href={location.mapLink}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-sm block hover:text-white transition-colors"
                                    >
                                        {location.address}
                                    </a>
                                    <a
                                        href={`tel:${location.phone}`}
                                        class="text-sm block hover:text-white transition-colors"
                                    >
                                        {location.phone}
                                    </a>
                                    <a
                                        href={`mailto:${location.email}`}
                                        class="text-sm block hover:text-white transition-colors"
                                    >
                                        {location.email}
                                    </a>
                                    <a
                                        href={`mailto:${location.email2}`}
                                        class="text-sm block hover:text-white transition-colors"
                                    >
                                        {location.email2}
                                    </a>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Contact - Enhanced card with improved newsletter form -->
            <div class="glass-card p-6 rounded-2xl">
                <h3
                    class="text-white font-bold mb-6 text-lg border-b border-blue-700 pb-2"
                >
                    Get in Touch
                </h3>
                <div class="space-y-6">
                    <p class="text-blue-200 flex items-center">
                        <svg
                            class="w-4 h-4 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                            ></path>
                        </svg>
                        <span class="block">
                            <span class="font-semibold block"
                                >24/7 Support:</span
                            >
                            <a href="tel:+971 (50)9515995"
                                >+971 (50)9515995</a
                            >
                        </span>
                    </p>
                    <p class="text-blue-200 flex items-center">
                        <svg
                            class="w-4 h-4 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path
                                d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                            ></path>
                            <path
                                d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                            ></path>
                        </svg>
                        <span class="block">
                            <span class="font-semibold block">Email:</span>
                            <a href="mailto:operation@alcanzaship.com"
                                >operations@alcanzaship.com</a
                            >
                            <a href="mailto:sales@alcanzaship.com"
                                >sales@alcanzaship.com</a
                            >
                        </span>
                    </p>

                    <!-- Enhanced Newsletter Form -->
                    <div class="pt-4 border-t border-blue-800/30">
                        <form
                            class="space-y-3"
                            action="/api/newsletter"
                            method="POST"
                        >
                            <input
                                type="email"
                                name="email"
                                placeholder="Enter your email"
                                required
                                class="w-full px-4 py-3 rounded-xl bg-white/5 border border-blue-700/50 text-white placeholder-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent backdrop-blur-sm transition-all duration-300"
                            />
                            <button
                                type="submit"
                                class="w-full bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-500 hover:to-blue-400 text-white px-6 py-3 rounded-xl transition-all duration-300 transform hover:translate-y-[-2px] hover:shadow-lg flex items-center justify-center gap-2 font-medium"
                            >
                                Subscribe
                                <svg
                                    class="w-5 h-5"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                >
                                    <path
                                        d="M13 5L20 12L13 19M4 12H20"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"></path>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Enhanced bottom bar -->
        <div class="mt-16 pt-8 border-t border-blue-800/30">
            <div
                class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
            >
                <p class="text-blue-200 text-sm">
                    © {currentYear} MarineShip. All rights reserved.
                </p>
                <div class="flex space-x-8">
                    {
                        company.map((item) => (
                            <a
                                href={item.href}
                                class="text-blue-200 hover:text-white text-sm transition-all duration-300 hover:underline"
                            >
                                {item.name}
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</footer>

<style>
    /* Enhanced, more stable animations */
    .glass-card {
        background: linear-gradient(
            135deg,
            rgba(255, 255, 255, 0.05) 0%,
            rgba(255, 255, 255, 0.02) 100%
        );
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

    .glass-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 40px 0 rgba(0, 0, 0, 0.2);
        border-color: rgba(255, 255, 255, 0.2);
    }

    @keyframes gentle-wave {
        0%,
        100% {
            transform: translateX(0) translateY(0);
        }
        50% {
            transform: translateX(-25px) translateY(2px);
        }
    }

    .animate-gentle-wave {
        animation: gentle-wave 8s ease-in-out infinite;
    }

    /* Remove previous animations that might cause instability */
    .animate-wave,
    .animate-subtle-float,
    .animate-gradient {
        animation: none;
    }

    /* Add smooth transitions */
    a,
    button {
        transition: all 0.3s ease-in-out;
    }

    /* Improved focus states */
    a:focus,
    button:focus,
    input:focus {
        outline: none;
        ring: 2px;
        ring-color: rgb(59, 130, 246);
        ring-offset: 2px;
    }
</style>
