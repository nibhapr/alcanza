---
import Layout from "../../layouts/Layout.astro";
import EngineStoresComponent from "../../components/services/engine-stores.astro";

// SEO Meta Data
const schema = {
  "@context": "https://schema.org",
  "@type": "MarineBusinessEstablishment",
  name: "Alcanza Ship Services - Marine Supplies & Ship Chandling Services",
  description:
    "Premium ship chandling services in UAE, Dubai, Saudi Arabia and other UAE countries. Specialized in marine supplies, ship equipment, spare parts, and marine technical solutions.",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Mai Tower, Office 401-405, Al Nahda 1",
    addressLocality: "Dubai",
    addressCountry: "UAE",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: "25.2848",
    longitude: "55.3222",
  },
  email: ["sales@alcanzaship.com", "operation@alcanzaship.com"],
  telephone: "+971561635323",
  openingHours: "Mo-Fr 09:00-18:00",
  url: "https://alcanzaship.com/services/engine-stores",
};
---

<Layout
  title="Ship Chandling Services in UAE, Dubai & Saudi Arabia | Alcanza Ship"
  description="Leading provider of ship chandling services in UAE, Dubai, Saudi Arabia and GCC. Professional marine supplies, engine stores, and ship equipment services."
>
  <!-- Meta tags for SEO -->
  <meta slot="head" />
  <!-- Basic SEO -->
  <meta name="robots" content="index, follow" />
  <meta name="author" content="Alcanza Ship Services" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="theme-color" content="#1a365d" />
  <meta name="rating" content="General" />
  <meta name="geo.region" content="AE-DU" />
  <meta name="geo.placename" content="Dubai" />
  <meta name="geo.position" content="25.2848;55.3222" />
  <meta name="ICBM" content="25.2848, 55.3222" />

  <!-- Language Alternates -->
  <link
    rel="alternate"
    href="https://alcanzaship.com/services/engine-stores"
    hreflang="ar-ae"
  />
  <link
    rel="alternate"
    href="https://alcanzaship.com/services/engine-stores"
    hreflang="en-ae"
  />
  <link
    rel="alternate"
    href="https://alcanzaship.com/services/engine-stores"
    hreflang="x-default"
  />

  <!-- Social Media Additional Tags -->
  <meta property="og:site_name" content="Alcanza Ship Services" />
  <meta property="og:locale" content="en_AE" />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta name="twitter:site" content="@AlcanzaShip" />
  <meta name="twitter:creator" content="@AlcanzaShip" />
  <meta
    name="twitter:image:alt"
    content="Alcanza Ship Services - Marine Supplies & Equipment in Dubai"
  />

  <!-- Additional Business Info -->
  <meta
    name="business:contact_data:street_address"
    content="Mai Tower, Office 401-405, Al Nahda 1"
  />
  <meta name="business:contact_data:locality" content="Dubai" />
  <meta name="business:contact_data:country" content="UAE" />
  <meta name="business:contact_data:email" content="sales@alcanzaship.com" />
  <meta name="business:contact_data:phone_number" content="+971561635323" />

  <!-- Additional meta tags that were outside Layout -->
  <meta
    name="description"
    content="Leading provider of ship chandling services in UAE, Dubai, Saudi Arabia and GCC. Professional marine supplies, engine stores, and ship equipment services."
  />
  <meta
    name="keywords"
    content="ship chandling services UAE, ship chandling services Dubai, ship chandling services Saudi Arabia, marine supplies UAE, engine stores Dubai, ship equipment, marine spare parts, technical solutions UAE, Alcanza Ship Services"
  />

  <!-- Open Graph / Social Media -->
  <meta
    property="og:title"
    content="Ship Chandling Services in UAE, Dubai & Saudi Arabia | Alcanza Ship"
  />
  <meta
    property="og:description"
    content="Premium ship chandling services in UAE, Dubai, Saudi Arabia and GCC. Specialized in marine supplies and ship equipment."
  />
  <meta property="og:type" content="website" />
  <meta
    property="og:url"
    content="https://alcanzaship.com/services/engine-stores"
  />
  <meta
    property="og:image"
    content="https://alcanzaship.com/services/engine-stores.jpg"
  />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta
    name="twitter:title"
    content="Ship Chandling Services in UAE, Dubai & Saudi Arabia | Alcanza Ship"
  />
  <meta
    name="twitter:description"
    content="Premium ship chandling services in UAE, Dubai, Saudi Arabia and GCC. Specialized in marine supplies and ship equipment."
  />

  <!-- Canonical URL -->
  <link rel="canonical" href="https://alcanzaship.com/services/engine-stores" />

  <!-- Schema.org JSON-LD -->
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <EngineStoresComponent />
</Layout>
