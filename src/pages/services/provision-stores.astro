---
import Layout from "../../layouts/Layout.astro";
import ProvisionStoresComponent from "../../components/services/provision-stores.astro";

// Enhanced SEO Meta Data
const schema = {
  "@context": "https://schema.org",
  "@type": "MarineBusinessEstablishment",
  name: "Alcanza Ship Services",
  alternateName: "Alcanza Ship UAE",
  description:
    "Leading marine supplies and ship chandler in UAE providing provisions, stores, and equipment. Professional marine supply services in Dubai and across UAE ports.",
  foundingDate: "2020",
  image: "https://alcanzaship.com/home/logo.jpg",
  logo: "https://alcanzaship.com/home/logo.png",
  priceRange: "$$",
  address: {
    "@type": "PostalAddress",
    streetAddress: "Mai Tower, Office 401-405, Al Nahda 1",
    addressLocality: "Dubai",
    addressRegion: "Dubai",
    addressCountry: "UAE",
    postalCode: "12345",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: "25.2848",
    longitude: "55.3222",
  },
  contactPoint: [
    {
      "@type": "ContactPoint",
      telephone: "+971561635323",
      contactType: "sales",
      email: "sales@alcanzaship.com",
      availableLanguage: ["English", "Arabic"],
    },
  ],
  areaServed: [
    "Dubai",
    "Abu Dhabi",
    "Sharjah",
    "Fujairah",
    "Ajman",
    "Ras Al Khaimah",
    "Umm Al Quwain",
  ],
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Marine Supplies Services",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Ship Chandler Services",
          description: "Professional ship chandler services in UAE ports",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Service",
          name: "Marine Provisions Supply",
          description: "Quality marine provisions and stores supply",
