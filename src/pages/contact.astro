            "description": "Leading marine supplies and equipment provider in Dubai, UAE",
            "contactPoint": [
                {
                    "@type": "ContactPoint",
                    "telephone": "+971561635323",
                    "contactType": "sales",
                    "email": "sales@alcanzaship.com",
                    "areaServed": "AE",
                    "availableLanguage": ["en", "ar"]
                },
                {
                    "@type": "ContactPoint",
                    "telephone": "+971561635323",
                    "contactType": "customer service",
                    "email": "operation@alcanzaship.com",
                    "areaServed": "AE",
                    "availableLanguage": ["en", "ar"]
                }
            ],
            "address": {
                "@type": "PostalAddress",
                "streetAddress": "Mai Tower, Office 401-405, Al Nahda 1",
                "addressLocality": "Dubai",
                "addressRegion": "Dubai",
                "addressCountry": "UAE",
                "postalCode": "00000"
            },
            "sameAs": [
                "https://www.linkedin.com/company/alcanzaship",
                "https://www.facebook.com/alcanzaship",
