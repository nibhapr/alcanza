---
import Layout from "../layouts/Layout.astro";
import ServicesSection from "../components/services.astro";

// SEO Meta Data
const title = "Marine Services & Equipment Supplies | Alcanza Ship UAE";
const description =
    "Professional marine supplies and equipment services in UAE. Alcanza Ship provides high-quality ship chandling services across Dubai, UAE ports, and Saudi Arabia with comprehensive marine equipment, technical support, and ship supplies.";
const canonicalURL = new URL("/services", Astro.site);

// Enhanced Schema.org data
const organizationSchema = {
    "@context": "https://schema.org",
    "@type": "MarineBusinessEstablishment",
    name: "Alcanza Ship Services",
    description: description,
    url: canonicalURL,
    logo: "https://alcanzaship.com/home/logo.jpg",
    image: ["https://alcanzaship.com/home/logo.jpg"],
    address: {
        "@type": "PostalAddress",
        streetAddress: "Mai Tower, Office 401-405, Al Nahda 1",
        addressLocality: "Dubai",
        addressRegion: "Dubai",
        addressCountry: "UAE",
    },
    geo: {
        "@type": "GeoCoordinates",
        latitude: "25.2848",
        longitude: "55.3222",
    },
    contactPoint: [
        {
            "@type": "ContactPoint",
            telephone: "+971561635323",
            contactType: "sales",
            email: "sales@alcanzaship.com",
            areaServed: "AE",
            availableLanguage: ["en", "ar"],
            hoursAvailable: "Mo-Fr 09:00-17:00",
        },
        {
            "@type": "ContactPoint",
            telephone: "+971561635323",
            contactType: "operations",
            email: "operation@alcanzaship.com",
            areaServed: "AE",
            availableLanguage: ["en", "ar"],
        },
    ],
    offers: {
        "@type": "Offer",
        serviceType: [
            "Marine Equipment Supply",
            "Ship Chandling",
            "Technical Support",
            "Marine Services",
        ],
    },
    areaServed: [
        {
            "@type": "GeoCircle",
            geoMidpoint: {
                "@type": "GeoCoordinates",
                latitude: "25.2848",
                longitude: "55.3222",
            },
            geoRadius: "100km",
        },
    ],
    sameAs: [
        "https://www.facebook.com/alcanzaship",
        "https://www.instagram.com/alcanzaship",
        "https://www.linkedin.com/company/alcanzaship",
        "https://www.twitter.com/alcanzaship",
    ],
};
---

<Layout title={title} description={description} canonicalURL={canonicalURL}>
    <!-- Enhanced SEO Meta Tags -->
    <meta slot="head" name="description" content={description} />
    <meta
        slot="head"
        name="keywords"
        content="ship chandling services UAE, ship chandling services Dubai, ship chandling services Saudi Arabia, ship chandling Abu Dhabi, ship chandling Fujairah, marine supplies, ship equipment, marine services UAE, Dubai marine supplies, ship chandler UAE, marine technical support, vessel supplies Dubai, maritime equipment UAE, ship maintenance Dubai, marine spare parts UAE, ship stores Dubai"
    />

    <!-- Additional Meta Tags -->
    <meta slot="head" name="robots" content="index, follow" />
    <meta slot="head" name="author" content="Alcanza Ship Services" />
    <meta slot="head" name="rating" content="General" />

    <!-- Open Graph / Social Media -->
    <meta slot="head" property="og:title" content={title} />
    <meta slot="head" property="og:description" content={description} />
    <meta slot="head" property="og:type" content="website" />
    <meta slot="head" property="og:url" content={canonicalURL} />
    <meta slot="head" property="og:site_name" content="Alcanza Ship Services" />
    <meta slot="head" property="og:locale" content="en_AE" />
    <meta
        slot="head"
        property="og:image"
        content="https://alcanzaship.com/home/logo.jpg"
    />
    <meta slot="head" property="og:image:width" content="1200" />
    <meta slot="head" property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta slot="head" name="twitter:card" content="summary_large_image" />
    <meta slot="head" name="twitter:title" content={title} />
    <meta slot="head" name="twitter:description" content={description} />
    <meta
        slot="head"
        name="twitter:image"
        content="https://alcanzaship.com/home/logo.jpg"
    />

    <!-- Region and Language -->
    <meta slot="head" name="geo.region" content="AE" />
    <meta slot="head" name="geo.placename" content="Dubai" />
    <meta slot="head" name="geo.position" content="25.2848;55.3222" />
    <meta slot="head" name="ICBM" content="25.2848, 55.3222" />
    <link slot="head" rel="alternate" hreflang="en-ae" href={canonicalURL} />
    <link
        slot="head"
        rel="alternate"
        hreflang="ar-ae"
        href={`${canonicalURL}/ar`}
    />
    <link
        slot="head"
        rel="alternate"
        hreflang="x-default"
        href={canonicalURL}
    />

    <!-- Mobile Optimization -->
    <meta slot="head" name="format-detection" content="telephone=yes" />
    <meta slot="head" name="theme-color" content="royal blue" />

    <!-- Canonical -->
    <link slot="head" rel="canonical" href={canonicalURL} />

    <!-- Schema.org JSON-LD -->
    <script
        slot="head"
        type="application/ld+json"
        set:html={JSON.stringify(organizationSchema)}
    />

    <!-- Breadcrumb Schema -->
    <script slot="head" type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "BreadcrumbList",
            "itemListElement": [
                {
                    "@type": "ListItem",
                    "position": 1,
                    "name": "Home",
                    "item": "https://alcanzaship.com"
                },
                {
                    "@type": "ListItem",
                    "position": 2,
                    "name": "Services",
                    "item": "https://alcanzaship.com/services"
                }
            ]
        }
    </script>

    <!-- Updated Meta Tags -->
    <meta slot="head" name="geo.position" content="25.2848;55.3222" />
    <meta slot="head" name="ICBM" content="25.2848, 55.3222" />
    <meta
        slot="head"
        name="format-detection"
        content="telephone=+971561635323"
    />

    <!-- Add structured contact data -->
    <script slot="head" type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "ContactPage",
            "description": "Contact Alcanza Ship Services for marine supplies and equipment in UAE",
            "mainEntity": {
                "@type": "Organization",
                "name": "Alcanza Ship Services",
                "address": {
                    "@type": "PostalAddress",
                    "streetAddress": "Mai Tower, Office 401-405, Al Nahda 1",
                    "addressLocality": "Dubai",
                    "addressRegion": "Dubai",
                    "addressCountry": "UAE"
                },
                "email": ["sales@alcanzaship.com", "operation@alcanzaship.com"],
                "telephone": "+971561635323",
                "contactType": "customer service"
            }
        }
    </script>

    <main>
        <ServicesSection />
    </main>
</Layout>
